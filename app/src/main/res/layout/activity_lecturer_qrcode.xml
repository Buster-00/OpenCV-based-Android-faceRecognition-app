<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/flyhigh"
    tools:context=".lecturer.LecturerQRCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:navigationIcon="@drawable/ic_baseline_chevron_left_24"
        app:title="Attendance QR code"
        app:titleTextColor="@color/white"
        app:titleMarginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_QRCode"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="320dp"
        android:layout_height="320dp"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/img_QRCode"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please scan the QR code to continue attendance"/>

</RelativeLayout>