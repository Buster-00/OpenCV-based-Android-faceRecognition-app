<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:don="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <com.ramotion.foldingcell.FoldingCell
        android:elevation="10dp"
        android:clickable="true"
        android:layout_marginLeft="@dimen/myButton_marginLeft_left"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"

        android:background="@drawable/radius_shape"
        android:layout_height="wrap_content">

        <LinearLayout

            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_shape"
            android:visibility="gone"
            android:orientation="vertical">


            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:backgroundTint="#2e8abb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarStyle">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="20sp"/>
            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <com.google.android.material.button.MaterialButton
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/btn_click"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="View detail"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_addStudent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="add student"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="View detail"/>

            </LinearLayout>




        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                        <com.github.chengang.library.TickView
                            android:layout_gravity="center"
                            app:uncheck_base_color="@color/white"
                            app:check_base_color="@color/green"
                            android:clickable="false"
                            android:id="@+id/tick_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/purple_500" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="15dp"
                        android:id="@+id/tv_lectureName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingLeft="15dp"
                        android:textSize="20dp"
                        android:text="LectureName" />


                        <TextView
                            android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_class_24"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_lectureID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="LectureID"
                            />

                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_date_range_24"
                            android:drawablePadding="5dp"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="date"
                            />

                         <TextView
                             android:drawablePadding="5dp"
                            android:drawableLeft="@drawable/ic_baseline_house_24"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="15dp"
                            android:textSize="15dp"
                            android:id="@+id/tv_venue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="venue"
                            />


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>