<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecognizeSuccess">

    <com.github.chengang.library.TickView
        android:id="@+id/tick_view"
        app:check_base_color="@color/green"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_recognize_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_recognize_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recognize Success"
        />
</RelativeLayout>